%head
  %title Leasify - Easiest way to build a website for CRE
  = stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
  = stylesheet_link_tag "introjs"
  = javascript_include_tag "application", "data-turbolinks-track" => true
  = csrf_meta_tags
  - if Rails.env.production?
    / For leasify.co
    %script{:src => "//use.typekit.net/ckw2lgb.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
  - elsif Rails.env.development?
    / for lvh.me, remove when pushing to git and heroku
    %script{:src => "//use.typekit.net/bgg6ayr.js", :type => "text/javascript"}
    :javascript
      try{Typekit.load();}catch(e){}
