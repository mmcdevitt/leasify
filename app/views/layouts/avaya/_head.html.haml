!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title= @propertyinformation.name
    = stylesheet_link_tag "bootstrap.css", "avaya.css", "leasing.css", "font-awesome.min"
    = javascript_include_tag "jquery", "bootstrap", "app", "jquery.slimscroll.min", "app.plugin"
    = csrf_meta_tags
    - if Rails.env.production?
      / For leasify.co
      %script{:src => "//use.typekit.net/ckw2lgb.js", :type => "text/javascript"}
      :javascript
        try{Typekit.load();}catch(e){}
    - elsif Rails.env.development?
      / for lvh.me, remove when pushing to git and heroku
      %script{:src => "//use.typekit.net/bgg6ayr.js", :type => "text/javascript"}
      :javascript
        try{Typekit.load();}catch(e){}
    :css
      header ul li a {
            color: #{@themeoptions.nav_color};
          }
          header ul li a:hover {
            color: #{@themeoptions.navhover_color} !important;
          }
          footer {
            font-size: #{@themeoptions.footer_size}px;
          }
          footer p {
            color: #{@themeoptions.footer_color};
          }
          a.customize-link,
          .page-content a {
            color: #{@themeoptions.link_color};
          }
      <haml_silent>     unless params[:action] == &quot;show&quot; &amp;&amp; params[:controller] == &quot;availabilities&quot; 
      </haml_silent><haml_block>    .page-content p,
          .page-content {
            color: #{@themeoptions.body_color};
            font-size: #{@themeoptions.body_size}px;
          }
          
          .page-content h1,
          .page-content h2,
          .page-content h3,
          .page-content h4,
          .page-content h5,
          .page-content h6 {
            color: #{@themeoptions.body_heading_color} ;
          }
      </haml_block>    h1, h2, h3, h4, h5, h6 {
            text-transform: #{@themeoptions.heading_text_transform}; 
             #{font_name_for_heading_css.html_safe}
          }
          body {
            #{font_name_for_body_css.html_safe}
          }
