- unless @amenities.empty?
  %header.header.bg-white.b-b.clearfix
    .row.m-t-sm
      .col-sm-8.m-b-xs
        .btn-group
          %button.btn.btn-sm.btn-default{:title => "Refresh", :type => "button"}
            %i.fa.fa-refresh
          %button.btn.btn-sm.btn-default{:title => "Remove", :type => "button"}
            %i.fa.fa-trash-o
          %button.btn.btn-sm.btn-default{"data-toggle" => "dropdown", :title => "Filter", :type => "button"}
            %i.fa.fa-filter
            %span.caret
          %ul.dropdown-menu
            %li
              %a{:href => "#"} Action
            %li
              %a{:href => "#"} Another action
            %li
              %a{:href => "#"} Something else here
            %li.divider
            %li
              %a{:href => "#"} Separated link
        = link_to admin_amenities_new_path, class: "btn btn-sm btn-default" do
          %i.fa.fa-plus
          Create Amenities
      .col-sm-4.m-b-xs
        .input-group
          %input.input-sm.form-control.input-header{:placeholder => "Search", :type => "text"}/
          %span.input-group-btn
            %button.btn.btn-sm.btn-default{:type => "button"} Go!
%section.scrollable.wrapper.w-f
  - if @amenities.empty?
    .center
      %h1 You don't have any amenities created!
      %p.m-b-md Create amenities to include in your website.
      = link_to 'New amenity', admin_amenities_new_path, class: "btn btn-success"
  - else
    %h3.m-t-none.m-b-md Amenities
    %section.panel.panel-default
      .table-responsive
        %table.table.table-striped.m-b-none
          %thead
            %tr
              %th{:width => "20"}
                %label.checkbox.m-n.i-checks
                  %input{:type => "checkbox"}/
                  %i
              %th.th-sortable{"data-toggle" => "class"} Amenities
              %th.date Date
              %th{:width => "30"}
          %tbody
            - @amenities.each do |amenity|
              %tr.table-edit
                %td
                  %label.checkbox.m-n.i-checks
                    %input{:name => "ids[]", :type => "checkbox"}/
                    %i
                %td
                  = link_to amenity.name, admin_amenities_edit_path(amenity), class: "pull-left m-r-sm"
                  %ul.edit-links
                    %li
                      = link_to "Edit", admin_amenities_edit_path(amenity)
                      |
                    %li= link_to "View", admin_amenities_show_path(amenity)
                %td= amenity.updated_at.strftime("%B %e, %Y")
                %td
                  %a{"data-target" => "#amenity#{amenity.id}", "data-toggle" => "modal", :href => ""}
                    %i.fa.fa-trash-o
              / Modal
              .modal.fade{"aria-hidden" => "true", "aria-labelledby" => "myModalLabel", :id => "amenity#{amenity.id}", :role => "dialog", :tabindex => "-1"}
                .modal-dialog
                  .modal-content
                    .modal-header
                      %button.close{"aria-hidden" => "true", "data-dismiss" => "modal", :type => "button"} Ã—
                      %h4#myModalLabel.modal-title Are you sure?
                    .modal-body
                      Once the amenity is deleted, it's gone forever!
                    .modal-footer
                      %button.btn.btn-link{"data-dismiss" => "modal", :type => "button"} Close
                      = link_to "Delete", amenity, method: :delete, class: "btn btn-danger"
