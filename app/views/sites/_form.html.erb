<section class="scrollable wrapper w-f">
  <div class="panel-body">
    <div class="add-page wizard">

      <%= form_for(@site) do |f| %>
        <% if @site.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@site.errors.count, "error") %> prohibited this site from being saved:</h2>
            <ul>
            <% @site.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
            </ul>
          </div>
        <% end %>
          <div class="row">
            <div class="col-md-8 col-md-offset-2">
              <div class="top-info center" style="padding-bottom:0px;">
                <h1>Awesome!<br> Let's get started, <%= current_user.first_name %>.</h1>
                <div class="row">
                  <div class="col-lg-8 col-lg-offset-2">
                    <p class="m-t-lg">Before we can build your property website, we need to create your Leasify URL.
                      It's really easy to set up. Just fill in the form below. You can change this at anytime and make it unique. </p>
                  </div>
                </div>
              </div>
              <div class="row">
                <div style="width:350px; margin:0 auto;">
                  <%= f.fields_for :property_informations do |x| %>
                    <%= x.hidden_field :user_id, value: current_user.id %>
                  <div class="form-group" style="margin-top:30px;">
                    <%= x.label :name, "Property Name" %>
                    <%= x.text_field :name, class: "form-control" %>
                    <p>Your property's name.</p>
                  </div>
                  <% end %>
                  <div class="form-group">
                    <%= f.label :subdomain, "URL" %>
                    <div class="input-group">
                      <%= f.text_field :subdomain, class: "form-control" %>
                      <span class="input-group-addon">.leasify.co</span>
                    </div>
                    <p>No periods, spaces, underscores, or special characters.</p>
                  </div>

              
              <%= f.fields_for :theme_options do |builder| %>
                <%= builder.hidden_field :user_id, value: current_user.id %>
                <%= builder.hidden_field :content, value: "This is the coolest place on Earth." %>
                <%= builder.hidden_field :template, value: 2 %>
              <% end %>
               
              <div class="actions">
                <%= f.submit "Create my Site", class: "btn btn-success btn-more-padding btn-block" %>
              </div>
              </div>
              </div>
            </div>
          </div>
      <% end %>
    </div>
  </div>
</section>
