<%= form_for(@themeoptions) do |f| %> 
	<section class="scrollable wrapper w-f">
	  <div class="panel-body">
			<%= render 'layouts/themeoptionsheader' %>
			<div class="row">
				<div class="col-md-12">
					<h3 style="margin-bottom:30px;">Website Logo</h3>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<div class="logo-outline">
						<div class="add-page-image center">
					    <% if f.object.theme_image? %>
					      <div class="upload-preview-options m-b-lg">
					        <%= image_tag(@themeoptions.theme_image.url(:thumb), id: "uploadimage", class: "img-thumbnail") %>
					      </div>
					    <% else %>
					      <div class="upload-preview-options m-b-lg">
					        <%= image_tag("upload-image.png", id: "uploadimage") %>
					      </div>
					    <% end %>
					    <div class="row-fluid">
					      <%= f.file_field :theme_image, as: :file, id: 'lefile', style: "display:none;" %>
					      <div class="input-append">
					        <a class="btn btn-default" onclick="$('input[id=lefile]').click();">Upload Image</a>
					        <p style="font-size:12px; padding-top:25px; margin:0" class="muted">JPEG file, 2mb max</p>
					      </div>
					      <script type="text/javascript">
					        $('input[id=lefile]').change(function() {
					          $('#photoCover').val($(this).val());
					        });
					      </script>
					    </div>
					    <div class="form-group m-t-lg">
                <div class="checkbox m-n i-checks">
                  <label>
                    <%= f.check_box :show_logo  %> 
                    <i></i>
                    <%= f.label :show_logo, "Show logo?" %>
                  </label>
                </div>
              </div><!-- end form group -->
					  </div>
					</div>
				</div>
			</div>
		</div>
	</section>
	<footer class="footer bg-white b-t">
	  <div class="row text-center-xs">
	    <div class="col-md-12 text-right text-center-xs">                
	       <%= f.submit "Save", class: "btn btn-success btn-more-padding" %>
	    </div>
	  </div>
	</footer>
 <% end %>
